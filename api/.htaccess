# Disable directory listing
Options -Indexes +FollowSymLinks

# Enable rewrite engine
RewriteEngine On

# Protect config and utils files
<Files ~ "^(config|utils)\.php$">
    Order Allow,Deny
    Deny from all
</Files>

# Allow only specific HTTP methods
<LimitExcept GET POST PUT DELETE OPTIONS>
    Order Allow,Deny
    Deny from all
</LimitExcept>

# Set PHP error reporting
php_flag display_errors off
php_value error_reporting 32767

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Add security headers
Header set X-Content-Type-Options "nosniff"
Header set X-XSS-Protection "1; mode=block"
Header set X-Frame-Options "SAMEORIGIN"
Header set Referrer-Policy "strict-origin-when-cross-origin"

# Remove .php extension
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([^/]+)/?$ $1.php [L]

# Handle API endpoints
RewriteRule ^contact/?$ contact.php [L,QSA]
RewriteRule ^consultation/?$ consultation.php [L,QSA]
RewriteRule ^quote/?$ quote.php [L,QSA]

# Handle API endpoints with IDs
RewriteRule ^contact/([0-9]+)/?$ contact.php?id=$1 [L,QSA]
RewriteRule ^consultation/([0-9]+)/?$ consultation.php?id=$1 [L,QSA]
RewriteRule ^quote/([0-9]+)/?$ quote.php?id=$1 [L,QSA]

